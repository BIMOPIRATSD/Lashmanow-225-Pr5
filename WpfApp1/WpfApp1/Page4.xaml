<Page x:Class="WpfApp1.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите целое число N" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBox x:Name="Text1" Grid.Row="0" Grid.Column="1" Width="350" Height="75"/>
        <TextBox x:Name="Text2" Grid.Row="1" Grid.ColumnSpan="2" Width="600" Height="75" VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True"/>
        <Button Click="Button_Click" Grid.Row="2" Grid.ColumnSpan="2" Width="200" Height="75" Content="Ответ"/>
    </Grid>
</Page>
